{
  "name": "node_server",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/app.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/app.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "prisma generate"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@prisma/client": "^5.7.0",
    "@types/express": "^4.17.17",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prisma": "^5.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "imports": {
    "*.ts": "./src/*.ts"
  }
}
